<?xml version="1.0" encoding="utf-8"?>
<rotate xmlns:android="http://schemas.android.com/apk/res/android"
    android:fromDegrees="0"
    android:pivotX="50%"
    android:pivotY="50%"
    android:toDegrees="360">
    <shape
        android:shape="ring"
        android:thicknessRatio="30"
        android:useLevel="false">
        <gradient
            android:centerColor="@color/module_player_buffer_progress_center_color"
            android:centerY="0.50"
            android:endColor="@color/module_player_buffer_progress_end_color"
            android:startColor="@color/module_player_buffer_progress_start_color"
            android:type="sweep"
            android:useLevel="false" />
    </shape>
</rotate>